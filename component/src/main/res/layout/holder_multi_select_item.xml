<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_item_multi_select"
    android:foreground="?attr/selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_multi_select_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_android_24"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/item_multi_select_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_multi_select_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="타이틀"
        android:textSize="13sp"
        android:layout_marginTop="4dp"
        android:textColor="#323232"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_multi_select_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_multi_select_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="서브타이틀 서브타이틀 서브타이틀"
        android:textSize="11sp"
        android:layout_marginTop="2dp"
        android:textColor="#777777"
        app:layout_constraintTop_toBottomOf="@id/item_multi_select_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>