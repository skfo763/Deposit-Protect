<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog_multi_select">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_contents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:clipToPadding="false"
        android:paddingBottom="76dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/search_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#70B8FF"
        android:elevation="1dp"
        android:text="@string/search_bank"
        app:layout_constraintStart_toStartOf="@id/dialog_contents"
        app:layout_constraintEnd_toEndOf="@id/dialog_contents"
        app:layout_constraintBottom_toBottomOf="@id/dialog_contents"
        app:icon="@drawable/ic_baseline_search_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>